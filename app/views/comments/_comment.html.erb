<div class="comment">
<% if comment.user.id == current_user.id %>
    <%= link_to "×", comment_path(comment), :method => :delete, :remote => true, :confirm => "Are you sure you want to remove this comment?", :disable_with => "×", :class => 'close' %> <% end %>
    <h4> <%= comment.user.username %> </h4>  
    <hr>
    <p><%= comment.body %></p>
    <small><%= comment.updated_at%></small>
</div>
