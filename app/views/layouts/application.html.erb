<!DOCTYPE html>
<html>
<head>
  <title>NewYou</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if signed_in? %>
<nav class="navbar navbar-inverse">
<div class="container-fluid">
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
<ul class="nav navbar-nav navbar-right">
<% if signed_in? %>
<li id="fat-menu" class="dropdown">
<% if current_user.user_type == "Заказчик" %>
<li> <%= link_to "Все заказы", root_path %></li>
<li> <%= link_to "Мои заказы", user_root_path %></li>
<li> <%= link_to "Создать заказ", new_order_path, :class => 'btn' %>

<% else %>
<li> <%= link_to "Все работы", root_path %></li>
<li> <%= link_to "Мои работы", user_root_path %></li>
<% end %>
<li class="dropdown">
<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
<ul class="dropdown-menu">
<li> <%= link_to "Профиль", edit_user_registration_path %></li>
<li role="separator" class="divider"></li>
<li><%= link_to "Выход", destroy_user_session_path, method: "delete" %></li>
</ul>
</li>
</ul>
</li>

</div>
</div>

<% end %>
<% end %> </div>
</nav>
<%= yield %>

</body>
</html>
