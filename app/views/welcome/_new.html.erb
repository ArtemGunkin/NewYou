 <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
      :html => {:class => 'form-horizontal' }) do |m| %>
      <div class="form-group">
        <%= m.text_field :username, :class=>"form-control", :placeholder=>"Имя"%></div>
      <div class="form-group">
        <%=m.email_field :email, :class=>"form-control", :placeholder=>"Email" %></div>
      <div class="form-group">
        <%=m.password_field :password, :class=>"form-control", :placeholder=>"Пароль", autocomplete: "off" %></div>
      <div class="form-group">
        <%=m.password_field :password_confirmation , :class=>"form-control", :placeholder=>"Подтвержение пароля", autocomplete: "off"%>
      </div>
      <%= m.submit 'Регистрация', :class => "form-control btn-new" %>
      <%= m.radio_button :user_type, 'Заказчик', checked: true%>
      <%= m.label :user_type, 'Заказчик'%> <br>
      <%= m.radio_button :user_type, 'Исполнитель'%>
      <%=m.label :user_type, 'Исполнитель'%>
      <% end %> 